<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Order</title>
    <link rel="stylesheet" href="/css/dashboard.css">

    <!-- engagement links  -->
    <link rel="stylesheet" href="/css/facebook.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

</head>

<body>



    <div class="container">
        

        <!-- sidebar  -->
        <%- include ('partials/sidebar.ejs') %>





            <!-- Account Overview Section -->
            <section class="account-overview">
                <h2 class="section-title">Account Overview</h2>

                <div class="overview-grid">
                    <div class="overview-box1 active-1">
                        <div class="active-2">
                            <i class="fa-solid fa-wallet"></i>
                            <div class="hold">
                                <h3>Current Balance</h3>
                                <p>0.00</p>
                            </div>
                        </div>
                        <button class="fund-btn">Fund Account</button>
                    </div>

                    <div class="overview-box">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <div class="hold">
                            <h3>Orders processed</h3>
                            <p>50,935,318</p>
                        </div>
                    </div>

                    <div class="overview-box">
                        <i class="fa-solid fa-wifi"></i>
                        <div class="hold">
                            <h3>Stay Connected</h3>
                            <p>Null</p>
                        </div>
                    </div>
                </div>
            </section>






            <!-- Social Media Boosting Services -->
            <%- include ('partials/facebook.ejs') %>







            <!-- Special Offers Section -->
            <section class="special-offers">
                <h2 class="section-title">Special Offers</h2>
                <div class="offers-grid">
                    <div class="offer-box">
                        <h3>Offer 1: Get 20% Off Likes Boost</h3>
                        <p>Boost your likes at a discounted price for a limited time only.</p>
                        <button class="offer-btn">Claim Offer</button>
                    </div>
                    <div class="offer-box">
                        <h3>Offer 2: Buy Followers, Free Shares</h3>
                        <p>For every follower boost you purchase, get free shares on your posts.</p>
                        <button class="offer-btn">Claim Offer</button>
                    </div>
                    <div class="offer-box">
                        <h3>Offer 3: 50% Off on All Services</h3>
                        <p>Enjoy half price on all social media boosting services for new users.</p>
                        <button class="offer-btn">Claim Offer</button>
                    </div>
                </div>
            </section>
        </main>

    </div>




    <!-- engagements scripts  -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="/js/facebook.js"></script>

