<div class="network tiktok" id="tiktok-toggle">
    <i class="fa-brands fa-tiktok"></i> TikTok
</div>

<div class="summary">
    <div class="toggle-content" id="tiktok-toggle-content" style="display: none;">
        <div class="dropdown">
            <label for="tiktok-category">Category</label>
            <select id="tiktok-category">
                <option value="tiktok">⭐ TikTok services available</option>
                <option value="tiktokviews">⭐ TikTok views</option>
                <option value="tiktokfollowers">⭐ TikTok followers</option>
                <option value="tiktoklikes">⭐ TikTok likes</option>
            </select>
        </div>

        <div class="dropdown">
            <label for="tiktok-service">Service</label>
            <select id="tiktok-service"></select>
        </div>

        <div class="link-input">
            <label for="tiktok-link">Link</label>
            <input type="text" id="tiktok-link" placeholder="Enter the link here" />
        </div>

        <div class="quantity-input">
            <label for="tiktok-quantity">Quantity</label>
            <input type="number" id="tiktok-quantity" min="1" max="10000" placeholder="Min: 1 - Max: 10,000 per user" />
        </div>

        <div class="charge-field">
            <label for="tiktok-charge">Charge</label>
            <input type="text" id="tiktok-charge" readonly />
        </div>

        <div class="delivery-time">
            <label>Estimated Delivery Time: </label>
            <span id="tiktok-delivery-time"></span>
        </div>

        <div id="tiktok-discount-info"></div>
        <button id="tiktok-submit-btn" class="submit-btn">Submit</button>
    </div>

    <div id="tiktok-order-summary-modal" style="display:none;">
        <div class="flex">
            <h3>Order Summary</h3>
            <p>Service: <span id="tiktok-summary-service"></span></p>
            <p>Link: <a id="tiktok-summary-link" href="#" target="_blank"></a></p>
            <p>Quantity: <span id="tiktok-summary-quantity"></span></p>
            <p>Total Charge: <span id="tiktok-summary-charge"></span></p>
            <p>Estimated Delivery: <span id="tiktok-summary-delivery"></span></p>
        </div>
        <button id="tiktok-confirm-order">Confirm Order</button>
    </div>
</div>

<div id="tiktok-loading-spinner" style="display:none;">
    <div class="spinner"></div>
</div>
