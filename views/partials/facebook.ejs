<div class="summary">
    <div class="toggle-content" id="toggle-content" style="display: none;">
        <div class="dropdown">
            <label for="category">Category</label>
            <select id="category">
                <option value="facebook">⭐ Facebook services available </option>
                <option value="facebookview">⭐ Facebook views</option>
                <option value="facebookautolike">⭐ Facebook auto likes</option>
                <option value="facebookautoshear">⭐ Facebook auto shears</option>
                <option value="facebookprofilefollowers">⭐ Facebook profile folllower </option>
                <option value="facebookpagefollowers">⭐ Facebook page followers</option>
            </select>
        </div>

        <div class="dropdown">
            <label for="service">Service</label>
            <select id="service"></select>
        </div>

        <div class="link-input">
            <label for="link">Link</label>
            <input type="text" id="link" placeholder="Enter the link here" />
        </div>

        <div class="quantity-input">
            <label for="quantity">Quantity</label>
            <input type="number" id="quantity" min="1" max="10000" placeholder="Min: 1 - Max: 10,000 per user" />
        </div>

        <div class="charge-field">
            <label for="charge">Charge</label>
            <input type="text" id="charge" readonly />
        </div>

        <div class="delivery-time">
            <label>Estimated Delivery Time: </label>
            <span id="delivery-time"></span>
        </div>

        <div id="discount-info"></div>
        <button id="submit-btn" class="submit-btn">Submit</button>
    </div>

    <div id="order-summary-modal" style="display:none;">
        <div class="flex">
            <h3>Order Summary</h3>
            <p>Service: <span id="summary-service"></span></p>
            <p>Link: <a id="summary-link" href="#" target="_blank"></a></p>
            <p>Quantity: <span id="summary-quantity"></span></p>
            <p>Total Charge: <span id="summary-charge"></span></p>
            <p>Estimated Delivery: <span id="summary-delivery"></span></p>
        </div>
        <button id="confirm-order">Confirm Order</button>
    </div>
</div>

<div id="loading-spinner" style="display:none;">
    <div class="spinner"></div>
</div>
