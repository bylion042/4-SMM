<div class="grid">
    <div class="network facebook active" id="facebook-toggle">
        <i class="fa-brands fa-facebook"></i> Facebook
    </div>

    <div class="summary">
        <div class="toggle-content" id="facebook-toggle-content" style="display: none;">
            <div class="dropdown">
                <label for="facebook-category">Category</label>
                <select id="facebook-category">
                    <option value="facebook">⭐ Facebook services available</option>
                    <option value="facebooklikes">⭐ Facebook Likes</option>
                    <option value="facebookfollowers">⭐ Facebook Followers</option>
                    <option value="facebookshares">⭐ Facebook Shares</option>
                    <option value="facebookcomments">⭐ Facebook Comments</option>
                </select>
            </div>

            <div class="dropdown">
                <label for="facebook-service">Service</label>
                <select id="facebook-service"></select>
            </div>

            <div class="link-input">
                <label for="facebook-link">Link</label>
                <input type="text" id="facebook-link" placeholder="Enter the link here" />
            </div>

            <div class="quantity-input">
                <label for="facebook-quantity">Quantity</label>
                <input type="number" id="facebook-quantity" min="1" max="10000" placeholder="Min: 1 - Max: 10,000 per user" />
            </div>

            <div class="charge-field">
                <label for="facebook-charge">Charge</label>
                <input type="text" id="facebook-charge" readonly />
            </div>

            <div class="delivery-time">
                <label>Estimated Delivery Time: </label>
                <span id="facebook-delivery-time"></span>
            </div>

            <div id="facebook-discount-info"></div>
            
            <button id="facebook-submit-btn" class="submit-btn">Submit</button>
        </div>

        <div id="facebook-order-summary-modal" style="display:none;">
            <div class="flex">
                <h3>Order Summary</h3>
                <p>Service: <span id="facebook-summary-service"></span></p>
                <p>Link: <a id="facebook-summary-link" href="#" target="_blank"></a></p>
                <p>Quantity: <span id="facebook-summary-quantity"></span></p>
                <p>Total Charge: <span id="facebook-summary-charge"></span></p>
                <p>Estimated Delivery: <span id="facebook-summary-delivery"></span></p>
            </div>
            <button id="facebook-confirm-order">Confirm Order</button>
        </div>
    </div>

    <div id="facebook-loading-spinner" style="display:none;">
        <div class="spinner"></div>
    </div>
</div>
