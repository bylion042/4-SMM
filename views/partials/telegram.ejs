<div class="network telegram" id="telegram-toggle">
    <i class="fa-brands fa-telegram"></i> Telegram
</div>

<div class="summary">
    <div class="toggle-content" id="telegram-toggle-content" style="display: none;">
        <div class="dropdown">
            <label for="category">Category</label>
            <select id="telegram-category">
                <option value="telegram">⭐ Telegram services available</option>
                <option value="telegramviews">⭐ Telegram views</option>
                <option value="telegrammembers">⭐ Telegram members</option>
                <option value="telegramsponders">⭐ Telegram responders</option>
            </select>
        </div>

        <div class="dropdown">
            <label for="service">Service</label>
            <select id="telegram-service"></select>
        </div>

        <div class="link-input">
            <label for="link">Link</label>
            <input type="text" id="telegram-link" placeholder="Enter the link here" />
        </div>

        <div class="quantity-input">
            <label for="quantity">Quantity</label>
            <input type="number" id="telegram-quantity" min="1" max="10000" placeholder="Min: 1 - Max: 10,000 per user" />
        </div>

        <div class="charge-field">
            <label for="charge">Charge</label>
            <input type="text" id="telegram-charge" readonly />
        </div>

        <div class="delivery-time">
            <label>Estimated Delivery Time: </label>
            <span id="telegram-delivery-time"></span>
        </div>

        <div id="telegram-discount-info"></div>
        <button id="telegram-submit-btn" class="submit-btn">Submit</button>
    </div>

    <div id="telegram-order-summary-modal" style="display:none;">
        <div class="flex">
            <h3>Order Summary</h3>
            <p>Service: <span id="telegram-summary-service"></span></p>
            <p>Link: <a id="telegram-summary-link" href="#" target="_blank"></a></p>
            <p>Quantity: <span id="telegram-summary-quantity"></span></p>
            <p>Total Charge: <span id="telegram-summary-charge"></span></p>
            <p>Estimated Delivery: <span id="telegram-summary-delivery"></span></p>
        </div>
        <button id="telegram-confirm-order">Confirm Order</button>
    </div>
</div>

<div id="telegram-loading-spinner" style="display:none;">
    <div class="spinner"></div>
</div>
