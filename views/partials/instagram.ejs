<div class="network instagram" id="instagram-toggle">
    <i class="fa-brands fa-instagram"></i> Instagram
</div>

<div class="summary">
    <div class="toggle-content" id="instagram-toggle-content" style="display: none;">
        <div class="dropdown">
            <label for="instagram-category">Category</label>
            <select id="instagram-category">
                <option value="instagram">⭐ Instagram services available</option>
                <option value="instagramlikes">⭐ Instagram likes</option>
                <option value="instagramfollowers">⭐ Instagram followers</option>
                <option value="instagramcomments">⭐ Instagram comments</option>
            </select>
        </div>

        <div class="dropdown">
            <label for="instagram-service">Service</label>
            <select id="instagram-service"></select>
        </div>

        <div class="link-input">
            <label for="instagram-link">Link</label>
            <input type="text" id="instagram-link" placeholder="Enter the link here" />
        </div>

        <div class="quantity-input">
            <label for="instagram-quantity">Quantity</label>
            <input type="number" id="instagram-quantity" min="1" max="10000" placeholder="Min: 1 - Max: 10,000 per user" />
        </div>

        <div class="charge-field">
            <label for="instagram-charge">Charge</label>
            <input type="text" id="instagram-charge" readonly />
        </div>

        <div class="delivery-time">
            <label>Estimated Delivery Time: </label>
            <span id="instagram-delivery-time"></span>
        </div>

        <div id="instagram-discount-info"></div>
        <button id="instagram-submit-btn" class="submit-btn">Submit</button>
    </div>

    <div id="instagram-order-summary-modal" style="display:none;">
        <div class="flex">
            <h3>Order Summary</h3>
            <p>Service: <span id="instagram-summary-service"></span></p>
            <p>Link: <a id="instagram-summary-link" href="#" target="_blank"></a></p>
            <p>Quantity: <span id="instagram-summary-quantity"></span></p>
            <p>Total Charge: <span id="instagram-summary-charge"></span></p>
            <p>Estimated Delivery: <span id="instagram-summary-delivery"></span></p>
        </div>
        <button id="instagram-confirm-order">Confirm Order</button>
    </div>
</div>

<div id="instagram-loading-spinner" style="display:none;">
    <div class="spinner"></div>
</div>
